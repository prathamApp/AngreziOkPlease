<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/loginaop"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:weightSum="100"
    tools:context=".ui.admin_console.AdminConsole">

    <TextView
        android:id="@+id/tv_admin_title"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:background="@drawable/round_one_background"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:text="Admin Console"
        android:textColor="@color/simple_white"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/ll_operations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/admin_oprations_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="20dp">

                <ImageButton
                    android:id="@+id/btn_add_admin"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/admin_button_selector"
                    android:scaleType="center"
                    app:srcCompat="@drawable/student_add" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_add_admin"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Add New Admin"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/admin_oprations_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="20dp">

                <ImageButton
                    android:id="@+id/btn_transfer_data"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/admin_button_selector"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_send_usage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_add_admin"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Transfer\nData"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/admin_oprations_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="20dp">

                <ImageButton
                    android:id="@+id/btn_receive_data"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/admin_button_selector"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_receive_data" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_add_admin"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Receive\nData"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/admin_oprations_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="20dp">

                <ImageButton
                    android:id="@+id/btn_push"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/admin_button_selector"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_push_server" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_add_admin"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Push To Server"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/admin_oprations_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="20dp">

                <ImageButton
                    android:id="@+id/btn_self_push"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/admin_button_selector"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_phonelink" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Push Device Data"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_adminform"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="200dp"
        android:layout_marginTop="30dp"
        android:layout_weight="90"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="9">

        <EditText
            android:id="@+id/et_crlFirstName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="First Name ..."
            android:inputType="textPersonName"
            android:singleLine="true"
            android:paddingHorizontal="10dp"
            android:background="@drawable/admin_oprations_bg"
            android:textSize="20sp"
            android:tooltipText="First name" />

        <EditText
            android:id="@+id/et_crlLastName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:background="@drawable/admin_oprations_bg"
            android:hint="Last Name..."
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textSize="20sp"
            android:tooltipText="Last Name" />

        <EditText
            android:id="@+id/et_crlMobNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:background="@drawable/admin_oprations_bg"
            android:hint="Mobile Number..."
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textSize="20sp"
            android:tooltipText="Mobile Number" />

        <EditText
            android:id="@+id/et_crlMailId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:background="@drawable/admin_oprations_bg"
            android:hint="Mail ID..."
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="20sp"
            android:tooltipText="Mail ID" />

        <EditText
            android:id="@+id/et_crlUserName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:background="@drawable/admin_oprations_bg"
            android:hint="User Name..."
            android:inputType="text"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="20sp"
            android:tooltipText="User Name" />

        <EditText
            android:id="@+id/et_crlPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:background="@drawable/admin_oprations_bg"
            android:hint="Password..."
            android:inputType="textPassword"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="20sp"
            android:tooltipText="Password" />

        <Spinner
            android:id="@+id/sp_crlState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:background="@drawable/admin_oprations_bg"
            android:hint="States..."
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_submit_crl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.3"
            android:text="SUBMIT"
            android:background="@drawable/round_button_selector"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
