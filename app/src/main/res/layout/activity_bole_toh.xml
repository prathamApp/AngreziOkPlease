<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_bole_toh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bole_toh_bg"
    tools:context="com.example.pravin.angreziok.ui.bole_toh_round.BoleToh">

    <FrameLayout
        android:id="@+id/video_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center">

        <com.example.pravin.angreziok.custom.GifView
            android:id="@+id/round_intro_gifview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/skip_button_intro"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button_selector"
            android:text="SKIP" />

    </FrameLayout>

</RelativeLayout>