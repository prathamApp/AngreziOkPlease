<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dataconfirmation_bg"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:context="com.example.pravin.angreziok.ui.start_data_confirmation.DataConfirmation">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/tv_student_one"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/team_one"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:visibility="gone"
                android:text="Student 1"
                android:textColor="@color/simple_black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_student_two"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@drawable/team_two"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Student 2"
                android:textColor="@color/simple_black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_student_three"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/team_three"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Student 3"
                android:textColor="@color/simple_black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_student_four"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/team_four"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Student 4"
                android:textColor="@color/simple_black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_change_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:background="@drawable/round_button_selector"
            android:text="Change Team"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/tv_team_one"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/team_one_stud"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:paddingLeft="40dp"
                android:text="Megastars"
                android:textColor="@color/simple_black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_team_two"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/team_two_stud"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Rockstars"
                android:textColor="@color/simple_black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_team_three"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@drawable/team_three_stud"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Superstars"
                android:textColor="@color/simple_black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_team_four"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/team_four_stud"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:paddingLeft="40dp"
                android:text="Monstars"
                android:textColor="@color/simple_black"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_startgame"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/milestone" />

            <Button
                android:id="@+id/btn_startgm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="skip" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
