<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:background="@drawable/custom_dialog_bg"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="ADMIN LOGIN"
            android:textColor="@color/simple_black"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/dialog_close" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingHorizontal="50dp">

        <EditText
            android:id="@+id/dialog_et_uname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="User Name"
            android:singleLine="true"
            android:textColor="@color/simple_black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dialog_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/dialog_et_uname"
            android:hint="Password"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:inputType="textPassword"
            android:textColor="@color/simple_black"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/dialog_btn_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_selector"
                android:paddingHorizontal="10dp"
                android:text="Login" />

            <Button
                android:id="@+id/dialog_btn_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_selector"
                android:paddingHorizontal="10dp"
                android:text="Cancel" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
