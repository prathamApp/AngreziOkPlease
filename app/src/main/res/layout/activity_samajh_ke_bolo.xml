<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_samajh_ke_bolo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pravin.angreziok.ui.bole_toh_round.BoleToh">

    <FrameLayout
        android:id="@+id/video_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000">

        <VideoView
            android:id="@+id/round_intro_videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/skip_button_intro"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:background="@drawable/round_button_selector"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="top|right" />

    </FrameLayout>

</RelativeLayout>
