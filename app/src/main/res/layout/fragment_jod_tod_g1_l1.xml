<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@drawable/jod_tod_bg"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginVertical="2dp"
                            android:background="@drawable/round_two_background"
                            android:gravity="center"
                            android:paddingHorizontal="50dp">

                            <TextView
                                android:id="@+id/tv_game_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Jod Tod Round"
                                android:textAlignment="center"
                                android:textColor="@color/simple_black"
                                android:textSize="30sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="8.5"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:id="@+id/ll_r1g1_megastar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_one"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/r1g1_megastar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Megastars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_r1g1_rockstars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_two"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/r1g1_rockstars"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Rockstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_r1g1_superstars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_three"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/r1g1_superstars"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Superstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_r1g1_allstar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_four"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/r1g1_allstar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Allstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:background="@drawable/bord_frame_bg"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="8.8"
                            android:background="@drawable/board_background"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="5dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/iv_ques_img_r2_g1_l2"
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:background="@drawable/gameimgbg"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="W"
                                    android:textColor="@color/whiteTransparentNormal"
                                    android:textSize="100dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/r2_g1_l2_sttOptions"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="4"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="5dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="2">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:weightSum="2">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginHorizontal="10dp"
                                                android:layout_marginVertical="3dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/gameimgbg">

                                                <ImageView
                                                    android:id="@+id/iv_image1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:padding="5dp"
                                                    android:background="@color/full_transparent" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginHorizontal="10dp"
                                                android:layout_marginVertical="3dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/gameimgbg">

                                                <ImageView
                                                    android:id="@+id/iv_image2"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:padding="5dp"
                                                    android:background="@color/full_transparent"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:weightSum="2">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginHorizontal="10dp"
                                                android:layout_marginVertical="3dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/gameimgbg">

                                                <ImageView
                                                    android:id="@+id/iv_image3"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:padding="5dp"
                                                    android:background="@color/full_transparent"/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginHorizontal="10dp"
                                                android:layout_marginVertical="3dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/gameimgbg">

                                                <ImageView
                                                    android:id="@+id/iv_image4"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:padding="5dp"
                                                    android:background="@color/full_transparent"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/bord_frame_bg" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="3">

                <com.github.anastr.flattimelib.CountDownTimerView
                    android:id="@+id/mCountDownTimer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ib_r1g1_speaker"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/full_transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sound" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/question_gradiance_bg_2"
                android:gravity="center"
                android:text="This is where the question will appear"
                android:textColor="@color/simple_white"
                android:textSize="25sp"
                android:textStyle="italic|bold" />
        </LinearLayout>
    </LinearLayout>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/konfettiView_r1g1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
