<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@drawable/jod_tod_bg"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginVertical="2dp"
                            android:background="@drawable/round_two_background"
                            android:gravity="center"
                            android:paddingHorizontal="50dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Jod Tod Round"
                                android:textAlignment="center"
                                android:textColor="@color/simple_black"
                                android:textSize="30sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="8.5"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:id="@+id/ll_g1_l2_megastar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_one"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/g1_l2_megastar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Megastars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_g1_l2_rockstar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_two"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/g1_l2_rockstar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Rockstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_g1_l2_superstar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_three"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/g1_l2_superstar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Superstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_g1_l2_allstar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_four"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/g1_l2_allstar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Allstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:background="@drawable/bord_frame_bg"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="8.8"
                            android:background="@drawable/board_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <LinearLayout
                                    android:id="@+id/questionDiv"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:orientation="horizontal"></LinearLayout>

                                <ImageView
                                    android:id="@+id/iv_submit_ans"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="30dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/green_answer_background"
                                    app:srcCompat="@drawable/ic_navigate_next_black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/keyPadDiv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@color/answer_green"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:weightSum="10">

                                    <TextView
                                        android:id="@+id/A"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="A"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/B"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="B"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/C"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="C"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/D"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="D"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/E"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="E"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/F"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="F"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/G"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="G"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/H"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="H"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/I"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="I"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/J"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="J"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <TextView
                                        android:id="@+id/K"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="K"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/L"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="L"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/M"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="M"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/N"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="N"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/O"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="O"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/P"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="P"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/Q"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="Q"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/R"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="R"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/S"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="S"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/T"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="T"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="5dp"
                                    android:weightSum="10">

                                    <TextView
                                        android:id="@+id/U"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="U"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/V"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="V"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/W"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="W"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/X"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="X"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/Y"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="Y"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/Z"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button_selector"
                                        android:gravity="center"
                                        android:text="Z"
                                        android:layout_marginHorizontal="1dp"
                                        android:textSize="25sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/bord_frame_bg" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="3">

                <com.github.anastr.flattimelib.CountDownTimerView
                    android:id="@+id/mCountDownTimer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ib_r1g2_mic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/full_transparent"
                    android:scaleType="fitCenter"
                    android:visibility="invisible"
                    android:src="@drawable/mike" />

                <ImageButton
                    android:id="@+id/ib_g1_l2_speaker"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/full_transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sound" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/question_gradiance_bg_2"
            android:gravity="center"
            android:textColor="@color/simple_white"
            android:text="This is where the question will appear"
            android:layout_marginHorizontal="1dp"
            android:textSize="25sp"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/konfettiView_g1_l2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</RelativeLayout>
