<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@drawable/jod_tod_bg"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginVertical="2dp"
                            android:background="@drawable/round_two_background"
                            android:gravity="center"
                            android:paddingHorizontal="50dp">

                            <TextView
                                android:id="@+id/tv_game_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Jod Tod Round"
                                android:textAlignment="center"
                                android:textColor="@color/simple_black"
                                android:textSize="30sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="8.5"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:id="@+id/ll_g2_l1_megastar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_one"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/g2_l1_megastar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Megastars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_g2_l1_rockstar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_two"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/g2_l1_rockstar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Rockstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_g2_l1_superstar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_three"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/g2_l1_superstar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Superstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_g2_l1_allstar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/team_four"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/g2_l1_allstar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/simple_black"
                                android:textSize="27sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Allstars"
                                android:textColor="@color/simple_black"
                                android:textSize="21sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:background="@drawable/bord_frame_bg"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="8.8"
                            android:background="@drawable/board_background"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/question"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:paddingHorizontal="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/gameimgbg"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:textSize="35sp"
                                    android:textStyle="italic|bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="2dp"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:id="@+id/q1"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:background="@drawable/custom_dialog_bg2"
                                        android:layout_marginVertical="10dp"
                                        android:layout_weight="1"
                                        android:weightSum="9">

                                        <TextView
                                            android:id="@+id/question1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="2dp"
                                            android:textSize="30sp"
                                            android:textStyle="bold"
                                            android:layout_weight="4"
                                            android:gravity="center" />

                                        <ImageView
                                            android:id="@+id/iv_mike1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/mike"/>

                                        <TextView
                                            android:id="@+id/ans1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="2dp"
                                            android:textSize="30sp"
                                            android:textStyle="bold"
                                            android:layout_weight="4"
                                            android:gravity="center" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/q2"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginVertical="10dp"
                                        android:background="@drawable/custom_dialog_bg2"
                                        android:layout_weight="1"
                                        android:weightSum="9">

                                        <TextView
                                            android:id="@+id/question2"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="2dp"
                                            android:textSize="30sp"
                                            android:textStyle="bold"
                                            android:layout_weight="4"
                                            android:gravity="center" />

                                        <ImageView
                                            android:id="@+id/iv_mike2"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/mike"/>

                                        <TextView
                                            android:id="@+id/ans2"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_margin="2dp"
                                            android:textSize="30sp"
                                            android:textStyle="bold"
                                            android:layout_weight="4"
                                            android:gravity="center" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/bord_frame_bg" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="vertical"
                android:weightSum="2">

                <com.github.anastr.flattimelib.CountDownTimerView
                    android:id="@+id/mCountDownTimer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ib_g2_l1_speaker"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/full_transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sound" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/question_gradiance_bg_2"
                android:gravity="center"
                android:text="This is where the question will appear"
                android:textColor="@color/simple_white"
                android:textSize="25sp"
                android:textStyle="italic|bold" />
        </LinearLayout>
    </LinearLayout>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/konfettiView_g2_l1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</RelativeLayout>
